    <script>
        // Ocean Sparkle Cursor Effect
        const cursorSparkles = [];
        const maxSparkles = 15;

        for (let i = 0; i < maxSparkles; i++) {
            const sparkle = document.createElement('div');
            sparkle.className = 'cursor-sparkle';
            document.body.appendChild(sparkle);
            cursorSparkles.push({
                element: sparkle,
                x: 0,
                y: 0,
                delay: i * 0.03,
                size: 8 - (i * 0.3)
            });
        }

        let mouseX = 0;
        let mouseY = 0;
        let isMoving = false;

        document.addEventListener('mousemove', (e) => {
            mouseX = e.clientX;
            mouseY = e.clientY;
            isMoving = true;
            
            setTimeout(() => {
                isMoving = false;
            }, 100);
        });

        function animateSparkles() {
            cursorSparkles.forEach((sparkle, index) => {
                const targetX = mouseX - (index * 3);
                const targetY = mouseY - (index * 3);
                
                sparkle.x += (targetX - sparkle.x) * (0.2 - sparkle.delay);
                sparkle.y += (targetY - sparkle.y) * (0.2 - sparkle.delay);
                
                sparkle.element.style.left = sparkle.x + 'px';
                sparkle.element.style.top = sparkle.y + 'px';
                sparkle.element.style.opacity = isMoving ? (1 - index * 0.06) : 0;
                sparkle.element.style.transform = `scale(${sparkle.size / 8}) rotate(${index * 30}deg)`;
            });
            
            requestAnimationFrame(animateSparkles);
        }

        animateSparkles();

        // Login System
        const loginForm = document.getElementById('loginForm');
        const loginContainer = document.getElementById('loginContainer');
        const portfolioContent = document.getElementById('portfolioContent');
        const errorMessage = document.getElementById('errorMessage');
        const logoutBtn = document.getElementById('logoutBtn');

        // Login credentials - Change these to your preferred username and password
        const credentials = {
            username: 'mara',
            password: 'mara2025'
        };

        loginForm.addEventListener('submit', (e) => {
            e.preventDefault();
            
            const username = document.getElementById('username').value.toLowerCase();
            const password = document.getElementById('password').value;
            
            if (username === credentials.username && password === credentials.password) {
                errorMessage.style.display = 'none';
                loginContainer.style.display = 'none';
                portfolioContent.style.display = 'block';
                window.scrollTo(0, 0);
            } else {
                errorMessage.style.display = 'block';
                document.getElementById('password').value = '';
            }
        });

        logoutBtn.addEventListener('click', () => {
            if (confirm('Are you sure you want to logout?')) {
                portfolioContent.style.display = 'none';
                loginContainer.style.display = 'flex';
                loginForm.reset();
                errorMessage.style.display = 'none';
                window.scrollTo(0, 0);
            }
        });

        // Contact Form
        document.getElementById('contactForm').addEventListener('submit', (e) => {
            e.preventDefault();
            alert('Thank you for your message! I will get back to you soon.');
            e.target.reset();
        });

        // Smooth Scrolling with offset for fixed nav
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const targetId = this.getAttribute('href');
                const target = document.querySelector(targetId);
                if (target) {
                    const navHeight = document.querySelector('.nav-header').offsetHeight;
                    const targetPosition = target.getBoundingClientRect().top + window.pageYOffset - navHeight - 20;
                    
                    window.scrollTo({
                        top: targetPosition,
                        behavior: 'smooth'
                    });
                }
            });
        });
    </script>
</body>
